
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var rap = (List<DatVeXemPhim.Areas.Admin.Models.Cinema>)ViewBag.Rap;
}
<style>
    #map {
        width: 100%;
        height: 500px;

    }
</style>
<script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCojPBzMfElzZoUiPE03KgFjnZh5h80AjA&callback=initMap&libraries=&v=weekly"
        defer></script>

<div class="container">
    <hr class="nav-divider">
    <div class="row">

        <div class="container">

            <nav class="navbar navbar-dark bg-dark">
                <a class="navbar-brand" href="#">Các rạp chiếu phim</a>
            </nav>
            <hr class="nav-divider">
        </div>
        @foreach (var item in rap)
        {

            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100">
                    <a href="@Url.Action("ChiTietRap", "RapDetail")/@item.CinId"><img class="card-img-top" src="@item.Image" alt=""></a>
                    <div class="card-body">
                        <h3 class="card-title">
                            <a href="@Url.Action("ChiTietRap", "RapDetail")/@item.CinId">@item.NameCi</a>
                        </h3>
                        <h4>Thông tin</h4>
                        <h5>Địa chỉ :@item.Address  </h5>
                        <h5>Liên lạc :@item.Phone   </h5>
                        <h5>Chỗ ngồi :@item.Seats   </h5>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                    </div>
                </div>
            </div>
        }

        <hr class="nav-divider">
        <div class="container">
            <div  id="map">

            </div>
        </div>



    </div>
    <script>
        var map;
        function initMap() {
            map = new google.maps.Map(document.getElementById("map"), {
                center: { lat: 10.984178, lng: 106.667150 },
                zoom: 20
            });
        }
    </script>



</div>
